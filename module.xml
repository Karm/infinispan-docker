<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="urn:jboss:module:1.3" name="org.infinispan.query">
    <properties>
        <property name="jboss.api" value="private"/>
    </properties>

    <resources>
        <resource-root path="hibernate-hql-lucene-@HIBERNATE_HQL_LUCENE_VERSION@.jar"/>
        <resource-root path="hibernate-hql-parser-@HIBERNATE_HQL_PARSER_VERSION@.jar"/>
        <resource-root path="stringtemplate-@STRINGTEMPLATE_VERSION@.jar"/>
        <resource-root path="antlr-runtime-@ANTLR_RUNTIME_VERSION@.jar"/>
        <resource-root path="infinispan-directory-provider-@VERSION_INFINISPAN@.jar"/>
        <resource-root path="infinispan-lucene-directory-@VERSION_INFINISPAN@.jar"/>
        <resource-root path="infinispan-query-dsl-@VERSION_INFINISPAN@.jar"/>
        <resource-root path="infinispan-objectfilter-@VERSION_INFINISPAN@.jar"/>
        <resource-root path="infinispan-query-@VERSION_INFINISPAN@.jar"/>
    </resources>

    <dependencies>
        <module name="javax.api"/>
        <module name="javax.persistence.api"/>
        <module name="javax.transaction.api"/>
        <module name="org.antlr"/>
        <module name="org.apache.lucene"/>
        <module name="org.apache.lucene.internal"/>
        <module name="org.hibernate.commons-annotations"/>
        <module name="org.hibernate.search.engine"/>
        <module name="org.hibernate.search.serialization-avro"/>
        <module name="org.hibernate.search.orm"/>
        <module name="org.infinispan"/>
        <module name="org.infinispan.client.hotrod"/>
        <module name="org.infinispan.commons"/>
        <module name="org.jboss.logging"/>
        <module name="org.jboss.marshalling"/>
        <module name="org.jboss.marshalling.river"/>
        <module name="sun.jdk"/>
    </dependencies>
</module>
